{
  "compilerOptions": {
      "baseUrl": "src",
      "outDir": "./dist/",
      "noImplicitAny": true,
      // "target": "ES6",
      "target": "ES5",
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "types": ["react/next"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      // "jsx": "preserve",
      "jsx": "react-jsx",
      "useUnknownInCatchVariables": true
  },
  "include": ["src"],
  "exclude": ["spec"]
}